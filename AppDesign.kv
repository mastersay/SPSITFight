ScreenManagement:
    id: screen_manager
    OpenScreen:
        name: 'OpenScreen'
        manager: screen_manager
        id: open_screen
    MainScreen:
        name: 'MainScreen'
        manager: screen_manager
        id: main_screen
    FightScreen:
        name: 'FightScreen'
        manager: screen_manager
        id: fight_screen

<BasicBackground@Image>
    source: 'Assets/background.png'
    size: root.size
    allow_stretch: True
    keep_ratio: False

<UpgradeButton@Button>
    size_hint: .1, .1
    text: "+"
<PlayerActionButton@Button>
    size_hint: .1, .1
    text: "USE"


<OpenScreen>
    player_name_txtIn: player_name_txtIn
    submit_button: submit_button
    warning_label: warning_label
    FloatLayout:
        BasicBackground
#        size: root.size
#        canvas.before:
#            Color:
#                rgba: (1, 1, 1, 1)
#            Rectangle:
#                pos: self.pos
#                size: self.size

        TextInput:
            id: player_name_txtIn
            hint_text: "Enter your name"
            size_hint: .2, .1
            font_size: self.size[0]/9
            pos_hint: {'x':.4, 'y':.6}
            multiline: False
            text_validate_unfocus: False
            on_text_validate:
                app.submit_btn()
        Label:
            id: warning_label
            color: '#FE0000'
            size_hint: .3, .2
            font_size: self.size[0]/15
            pos_hint: {'x':.35, 'y':.45}
        Button:
#            background_color: [255/255, 116/255, 0, 1]
            background_color: '#10567A'
            id: submit_button
            size_hint: .2, .1
            pos_hint: {'x':.4, 'y':.4}
            text: "Submit"
            on_press: app.submit_btn()

<MainScreen>
    coins_label: coins_label

    fight_button: fight_button
    boss_fight_button: boss_fight_button

    programming_stat_label: programming_stat_label
    programming_upgrade_btn: programming_upgrade_btn

    design_stat_label: design_stat_label
    design_upgrade_btn: design_upgrade_btn

    creativity_stat_label: creativity_stat_label
    creativity_upgrade_btn: creativity_upgrade_btn

    heal_stat_label: heal_stat_label
    heal_buy_btn: heal_buy_btn

    FloatLayout:
        BasicBackground
        Label:
            text: app.main_hero.nick
            pos_hint: {'center_x': .5, 'center_y': .35}
        GridLayout:
            cols:1
            rows:2
            size_hint: .23, .2
            pos_hint: {'x':.04, 'top':.95}

            Button:
                id: fight_button
                text: "Fight"
                on_press:
                    app.root.current = 'FightScreen'
                    app.root.ids.fight_screen.basic_enemy()

            Button:
                id: boss_fight_button
                text: "Bosses"
                on_press:
                    app.root.current = 'FightScreen'
                    app.root.ids.fight_screen.boss_enemy()
        Label:
            id: coins_label
            text: "Coins {0}".format(app.main_hero.coins)
            color: '#EBFC00'
            size_hint: .2, .2
            pos_hint: {'right':1.06, 'top':1.07}
            font_size: 15
        GridLayout:
            cols: 4
            rows: 2
            size_hint: .4, .3
            pos_hint: {'x':.3, 'bottom':.95}

            Label:
                id: programming_stat_label
                text: "Programming {0}".format(app.main_hero.programming_stat)
            UpgradeButton:
                id: programming_upgrade_btn
                on_press: root.upgrade('programming_stat')

            Label:
                id: design_stat_label
                text: "Design {0}".format(app.main_hero.design_stat)
            UpgradeButton:
                id: design_upgrade_btn
                on_press: root.upgrade('design_stat')

            Label:
                id: creativity_stat_label
                text: "Creativity {0}".format(app.main_hero.creativity_stat)
            UpgradeButton:
                id: creativity_upgrade_btn
                on_press: root.upgrade('creativity_stat')

            Label:
                id: heal_stat_label
                text: "Heal {0}/{1}".format(app.main_hero.heal['heal'],app.main_hero.heal['max_heal'])
            UpgradeButton:
                id: heal_buy_btn
                on_press: root.upgrade('heal')

<FightScreen>
    programming_stat_label: programming_stat_label
#    programming_upgrade_btn: programming_upgrade_btn

    design_stat_label: design_stat_label
#    design_upgrade_btn: design_upgrade_btn

    creativity_stat_label: creativity_stat_label
#    creativity_upgrade_btn: creativity_upgrade_btn

    heal_stat_label: heal_stat_label
#    heal_buy_btn: heal_buy_btn

    enemy_programming_stat_label: enemy_programming_stat_label
    enemy_design_stat_label: enemy_design_stat_label
    enemy_creativity_stat_label: enemy_creativity_stat_label

    FloatLayout:
        BasicBackground
        Label:
            text: app.main_hero.nick
            pos_hint: {'center_x': .25, 'center_y': .35}
        GridLayout:
            cols: 2
            rows: 4
            size_hint: .4, .3
            pos_hint: {'left':.1, 'bottom':.95}

            Label:
                id: programming_stat_label
                text: "Programming {0}".format(app.main_hero.programming_stat)
            PlayerActionButton:
                on_press: root.player_action('programming_stat')

            Label:
                id: design_stat_label
                text: "Design {0}".format(app.main_hero.design_stat)
            PlayerActionButton:
                on_press: root.player_action('design_stat')

            Label:
                id: creativity_stat_label
                text: "Creativity {0}".format(app.main_hero.creativity_stat)
            PlayerActionButton:
                on_press: root.player_action('creativity_stat')

            Label:
                id: heal_stat_label
                text: "Heal {0}/{1}".format(app.main_hero.heal['heal'],app.main_hero.heal['max_heal'])
            PlayerActionButton:
                on_press: root.player_action('heal')
        Button:
            text: "X"
            pos_hint: {'x':.01, 'y':.01}
            size_hint: .02, .02
            on_press:
                app.root.current= 'MainScreen'

        GridLayout:
            cols: 1
            rows: 3
            size_hint: .4, .3
            pos_hint: {'right':1, 'bottom':.95}

            Label:
                id: enemy_programming_stat_label


            Label:
                id: enemy_design_stat_label


            Label:
                id: enemy_creativity_stat_label

