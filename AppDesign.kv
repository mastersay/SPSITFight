ScreenManagement:
    id: screen_manager
    OpenScreen:
        name: 'OpenScreen'
        manager: screen_manager
        id: open_screen
    MainScreen:
        name: 'MainScreen'
        manager: screen_manager
    FightScreen:
        name: 'FightScreen'
        manager: screen_manager

<BasicBackground@Image>
    source: 'Assets/background.png'
    size: root.size
    allow_stretch: True
    keep_ratio: False

<UpgradeButton@Button>
    size_hint: .1, .1
    text: "+"


<OpenScreen>
    player_name_txtIn: player_name_txtIn
    submit_button: submit_button
    warning_label: warning_label
    FloatLayout:
        BasicBackground
#        size: root.size
#        canvas.before:
#            Color:
#                rgba: (1, 1, 1, 1)
#            Rectangle:
#                pos: self.pos
#                size: self.size

        TextInput:
            id: player_name_txtIn
            hint_text: "Enter your name"
            size_hint: .2, .1
            font_size: self.size[0]/9
            pos_hint: {'x':.4, 'y':.6}
            multiline: False
            text_validate_unfocus: False
            on_text_validate:
                app.submit_btn()
        Label:
            id: warning_label
            color: '#FE0000'
            size_hint: .3, .2
            font_size: self.size[0]/15
            pos_hint: {'x':.35, 'y':.45}
        Button:
#            background_color: [255/255, 116/255, 0, 1]
            background_color: '#10567A'
            id: submit_button
            size_hint: .2, .1
            pos_hint: {'x':.4, 'y':.4}
            text: "Submit"
            on_press: app.submit_btn()

<MainScreen>
    fight_button: fight_button
    boss_fight_button: boss_fight_button

    programming_stat_label: programming_stat_label
    programming_upgrade_btn: programming_upgrade_btn

    design_stat_label: design_stat_label
    design_upgrade_btn: design_upgrade_btn

    creativity_stat_label: creativity_stat_label
    creativity_upgrade_btn: creativity_upgrade_btn

    heal_stat_label: heal_stat_label
    heal_buy_btn: heal_buy_btn

    FloatLayout:
        BasicBackground
        GridLayout:
            cols:1
            rows:2
            size_hint: .23, .2
            pos_hint: {'x':.04, 'top':.95}
            Button:
                id: fight_button
                text: "Fight"
                on_press: app.root.current = 'FightScreen'
            Button:
                id: boss_fight_button
                text: "Bosses"
                on_press: app.root.current = 'FightScreen'
        GridLayout:
            cols: 4
            rows: 2
            size_hint: .4, .3
            pos_hint: {'x':.3, 'bottom':.95}

            Label:
                id: programming_stat_label
                text: "programming 1"
            UpgradeButton:
                id: programming_upgrade_btn
                on_press: root.upgrade()

            Label:
                id: design_stat_label
                text: "design 1"
            UpgradeButton:
                id: design_upgrade_btn
                on_press: root.upgrade()

            Label:
                id: creativity_stat_label
                text: "creativity 1"
            UpgradeButton:
                id: creativity_upgrade_btn
                on_press: root.upgrade()

            Label:
                id: heal_stat_label
                text: "heal 1"
            UpgradeButton:
                id: heal_buy_btn
                on_press: root.upgrade()

<FightScreen>
    Button:
        text: "go back"
        on_press: app.root.current = 'OpenScreen'
