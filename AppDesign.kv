ScreenManagement:
    id: screen_manager
    OpenScreen:
        name: 'OpenScreen'
        manager: screen_manager
        id: openScreen
    MainScreen:
        name: 'MainScreen'
        manager: screen_manager
    FightScreen:
        name: 'FightScreen'
        manager: screen_manager


<OpenScreen>
    player_name: player_name
    submit_button: submit_button
    FloatLayout:
        size: root.size
        TextInput:
            id: player_name
            hint_text: "Enter your name"
            size_hint: .2, .1
            pos_hint: {'x':.4, 'y':.6}
            multiline: False
        Button:
            id: submit_button
            size_hint: .2, .1
            pos_hint: {'x':.4, 'y':.4}
            text: "Submit"
            on_press:
                root.submit_btn()
                app.root.current = 'MainScreen' if app.submit_btn() else 'OpenScreen'

<MainScreen>
    Button:
        text: "go"
        on_press: app.root.current = 'FightScreen'

<FightScreen>
    Button:
        text: "go back"
        on_press: app.root.current = 'OpenScreen'
